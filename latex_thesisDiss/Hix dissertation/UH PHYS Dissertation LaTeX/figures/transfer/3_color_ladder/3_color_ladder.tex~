\begin{figure}
\setlength{\unitlength}{2cm}
\begin{center}
\begin{picture}(3.3,3.2)
\linethickness{1mm}
\put(0,3.0){\line(1,0){3}}
\put(0,2.0){\line(1,0){3}}
\put(0,0.8){\line(1,0){3}}
\put(0,0.0){\line(1,0){3}}
\put(3.1,3.0){$\ket{3}$}
\put(3.1,2.0){$\ket{2}$}
\put(3.1,0.8){$\ket{1}$}
\put(3.1,0.0){$\ket{0}$}
\thinlines
\put(1.0,2.0){\vector(0,1){0.98}}
\put(1.0,0.8){\vector(0,1){1.18}}
\put(1.0,0.0){\vector(0,1){0.78}}
\put(1.2,2.5){$\gamma$}
\put(1.2,1.4){$\beta$}
\put(1.2,0.4){$\alpha$}
\end{picture}
\end{center}
\caption{Four level, three field diagram. Ground state $\ket{0}$, first excited state $\ket{1}$, second excited state $\ket{2}$ and third excited state $\ket{3}$ are coupled by fields $\alpha$, $\beta$, and $\gamma$ so that population transfers from the ground state to the third excited state}
\label{three color ladder}
\end{figure}
